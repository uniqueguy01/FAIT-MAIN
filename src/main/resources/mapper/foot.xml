<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="foot">
	
	<select id="list" resultType="Foot">
		SELECT * FROM foot
	</select>
	
	<insert id="add">
		INSERT INTO foot
		VALUES (#{custid}, #{size}, #{shape}, #{insole})
	</insert>
	
	<select id="item" resultType="Foot">
		SELECT * FROM foot
		WHERE custid=#{custid}
	</select>
	
	<update id="update">
		UPDATE foot
		SET size=#{size}, shape=#{shape}, insole=#{insole}
		WHERE custid=#{custid}
	</update>
	
	<delete id="delete">
		DELETE FROM foot
		WHERE custid=#{custid}
	</delete>
	
</mapper>