<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="review">

	<resultMap type="Review" id="reviewMap" autoMapping="true">
	    <!-- ID 매핑 -->
	    <id column="review_id" property="id" />
	
	    <!-- 사진 정보 매핑 (collection) -->
	    <collection property="reviewImg" ofType="ReviewImg" javaType="ArrayList">
	        <id column="reviewimg_id" property="id" />
	        <result column="reviewid" property="reviewid" />
	        <result column="file" property="file" />
	        <result column="uuid" property="uuid" />
	    </collection>
	</resultMap>
	
	<insert id="add"></insert>
	
	<insert id="addReviewImg"></insert>

</mapper>