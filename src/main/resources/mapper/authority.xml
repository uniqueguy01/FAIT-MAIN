<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="authority">

	<select id="item" resultType="Authority">
			SELECT  * FROM authority
			WHERE code=#{code}
	</select>
	
	<select id="list" resultType="Authority">
		SELECT * FROM authority
	</select>
	
	<insert id="add">
		INSERT INTO authority
		(authority, subject)
		VALUES (#{authority}, #{subject})
	</insert>
	
	<update id="update">
		UPDATE authority
		SET authority=#{authority}, subject=#{subject}
		WHERE code=#{code}
	</update>
	
	<delete id="delete">
		DELETE FROM authority
		WHERE code=#{code}
	</delete>
	
</mapper>